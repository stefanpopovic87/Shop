{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "logs/shoplog.txt",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true,
          "formatter": "Serilog.Formatting.Json.JsonFormatter"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "ConnectionStrings": {
    "ProductDBConnection": "Host=localhost;Port=5432;Database=ProductDb;Username=postgres;Password=Beograd011!;",
    "HistoryDBConnection": "Host=localhost;Port=5432;Database=HistoryDb;Username=postgres;Password=Beograd011!;"
  },
  "AllowedOrigins": {
    "Client": "http://localhost:3000"
  },
  "AllowedHosts": "*"
}
